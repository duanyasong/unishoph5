
.flex-main {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.catlist-item {
	line-height: 40rpx;
	border-bottom: 1rpx solid #eee;
	padding-left: 5rpx;
	overflow: hidden;
	cursor: pointer;
}
.catlist-item.active {
	background-color: #eee;
}
.prolist-item-row-cart .numbox {
	display: none;
}
.prolist-item-row-cart-active .numbox {
	display: block;
}
.prolist-item {
	position: relative;
	padding: 5rpx 0;
	border-bottom: 1rpx solid #e4e4e4;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.prolist-item-g-sd1 {
	width: 50rpx;
	margin-right: 5rpx;
}
.prolist-item-img {
	width: 50rpx;
	height: 50rpx;
}
.prolist-item-g-mn1 {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.prolist-item-title {
	height: 40rpx;
	line-height: 20rpx;
	font-size: 14rpx;
	color: #333;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	margin-bottom: 3rpx;
}
.prolist-item-row-price {
	line-height: 22rpx;
	font-size: 16rpx;
	margin-bottom: 5rpx;
}
.prolist-item-price {
	color: #fa215f;
	margin-right: 5rpx;
	display: inline-block;
}
.prolist-item-sold-num {
	color: #999;
	font-size: 12rpx;
	display: inline-block;
}
.numbox {
	padding-top: 5rpx;
}
.prolist-item-buy-btn {
	display: block;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
	width: 30rpx;
	background-color: #83c44e;
	color: #fff;
	border-radius: 50%;
	float: right;
	cursor: pointer;
}
.prolist-item-row-cart-active .prolist-item-buy-btn {
	display: none;
}
.prolist-item-row-sold {
	line-height: 30rpx;
	height: 30rpx;
	color: #aaa;
}
.prolist-item-lower_price {
	text-decoration: line-through;
	color: #999;
}

