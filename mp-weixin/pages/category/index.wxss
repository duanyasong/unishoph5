
.list-side {
	position: fixed;
	left: 0rpx;
	top: 132rpx;
	bottom: 132rpx;
	width: 154rpx;
	border-right: 2rpx solid #eee;
	text-align: center;
}
.list-side-item {
	color: #707070;
	margin-bottom: 22rpx;
	font-size: 29rpx;
	display: block;
}
.list-side-item.active {
	color: #ff842b;
	border-left: 6rpx solid #ff842b;
}
.list-main {
	margin-left: 176rpx;
	padding-top: 132rpx;
}
.list-cat-img {
	max-width: 100%;
	height: 220rpx;
	padding-right: 11rpx;
}
.list-cat-hd {
	text-align: center;
	padding: 22rpx 0;
	color: #666;
	font-size: 29rpx;
	position: relative;
}
.list-cat-hd:before {
	display: block;
	width: 44rpx;
	height: 2rpx;
	background-color: #e0e0e0;
	position: absolute;
	right: 60%;
	top: 50%;
	content: "-";
	overflow: hidden;
	color: #666;
}
.list-cat-hd:after {
	display: block;
	width: 40rpx;
	height: 2rpx;
	background-color: #e0e0e0;
	position: absolute;
	left: 60%;
	top: 50%;
	content: "-";
	overflow: hidden;
	color: #666;
}
.list-child {
	margin-bottom: 22rpx;
}
.list-child-item {
	float: left;
	display: block;
	width: 33.333%;
	margin-bottom: 22rpx;
	padding: 0 22rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 29rpx;
	color: #666;
	text-align: center;
}
.list-child-img {
	width: 160rpx;
	height: 160rpx; 
	display: block;
	margin-bottom: 11rpx;
}
.list-child-title {
	height: 66rpx;
	line-height: 66rpx;
	overflow: hidden;
}
.fixtop {
	display: block;
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	padding: 22rpx;
	height: 110rpx;
	z-index: 999;
	background-color: #efefef;
}

